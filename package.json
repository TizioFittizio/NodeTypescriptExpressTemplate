{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Boilerplate project typescript",
  "main": "index.js",
  "scripts": {
    "type-start": "./node_modules/.bin/ts-node -- ./server/server.ts",
    "build": "npx tsc",
    "lint": "tslint 'server/**/*.ts'",
    "start": "node dist/server.js",
    "watch": "nodemon --exec ./node_modules/.bin/ts-node -- ./server/server.ts",
    "test": "SET NODE_ENV=test&& mocha -r ts-node/register server/tests/*.test.ts --timeout 5000 --exit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "author": "Luca Campana",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "mongodb": "^3.0.7",
    "mongoose": "^5.0.16",
    "tslint-config-airbnb": "^5.8.0"
  },
  "devDependencies": {
    "@types/expect": "^1.20.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/mongodb": "^3.0.15",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.5",
    "@types/supertest": "^2.0.4",
    "expect": "^22.4.3",
    "husky": "^1.0.0-rc.2",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.1"
  }
}
