{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Boilerplate project typescript",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "nodemon --exec ./node_modules/.bin/ts-node -- ./server/server.ts",
    "lint": "tslint 'server/**/*.ts'",
    "build": "npx tsc",
    "test": "SET NODE_ENV=test&& mocha -r ts-node/register server/tests/*.test.ts --timeout 5000 --exit"
  },
  "author": "Luca Campana",
  "license": "ISC",
  "dependencies": {
    "express": "^4.16.3",
    "tslint-config-airbnb": "^5.8.0"
  },
  "devDependencies": {
    "@types/expect": "^1.20.3",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.2.0",
    "@types/node": "^9.6.5",
    "@types/supertest": "^2.0.4",
    "expect": "^22.4.3",
    "husky": "^1.0.0-rc.2",
    "mocha": "^5.1.1",
    "nodemon": "^1.17.3",
    "supertest": "^3.0.0",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.6.0",
    "typescript": "^2.8.1"
  }
}
